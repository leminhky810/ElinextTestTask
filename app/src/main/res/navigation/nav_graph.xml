<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.elinex.imagestesttask.presentation.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        
        <action
            android:id="@+id/action_home_to_imageDetail"
            app:destination="@id/imageDetailFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/imageDetailFragment"
        android:name="com.elinex.imagestesttask.presentation.imageDetail.ImageDetailFragment"
        android:label="Image Detail"
        tools:layout="@layout/fragment_image_detail">
        
        <argument
            android:name="imageId"
            app:argType="long"
            android:defaultValue="0L" />
            
        <argument
            android:name="imageUrl"
            app:argType="string" />
    </fragment>

</navigation>
